{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false
  },
  "include": ["packages/**/*"],
  "exclude": [
    "node_modules",
    "**/deps/*",
    "**/dist/*",
    "**/coverage/*",
    "**/build/*",
    "**/public/*"
  ]
}
